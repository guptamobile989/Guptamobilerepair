    <script>
        let selectedCondition = 1;
        
        function nextStep(step) {
            document.querySelectorAll('.step-card').forEach(s => s.classList.remove('active'));
            document.getElementById('step' + step).classList.add('active');
        }

        function setCondition(val) {
            selectedCondition = val;
            calculateFinal();
            nextStep(3);
        }

        function calculateFinal() {
            const brandPrices = { 'iPhone': 45000, 'Samsung Premium': 35000, 'Realme/Redmi/Poco': 12000, 'Motorola': 14000, 'Budget': 7000 };
            const brand = document.getElementById('brand').value;
            const storage = parseFloat(document.getElementById('storage').value);
            
            const base = brandPrices[brand];
            const final = (base * storage) * selectedCondition;
            document.getElementById('finalPrice').innerText = Math.round(final);
        }

        function sendWhatsAppRequest() {
            const brand = document.getElementById('brand').value;
            const price = document.getElementById('finalPrice').innerText;
            const message = `Hi Nikhil! I want to sell my *${brand}* for approx ₹${price}. Please check my specs: [Storage/Battery/Condition]`;
            window.open(`https://wa.me/917973346005?text=${encodeURIComponent(message)}`, '_blank');
        }
    </script>

